<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/valRadioTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Happinesss Level"
            android:layout_marginBottom="@dimen/custom_form_label_margin"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/valRadioTitleHelper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a helper text"
            android:layout_marginBottom="5dp"
            android:textSize="14sp" />


        <RadioGroup
            android:id="@+id/valRadioGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    />

                <TextView
                    android:id="@+id/valSliderMinDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Very Sad"
                    android:gravity="left"
                    android:textSize="14sp" />
            </LinearLayout>


            <include
                layout="@layout/custom_field_rating_scale_radio_button"

                />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    />

                <TextView
                    android:id="@+id/valSliderMNeutralDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Neutral"
                    android:textSize="14sp" />
            </LinearLayout>


            <include
                layout="@layout/custom_field_rating_scale_radio_button"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    />

                <TextView
                    android:id="@+id/valSliderMaxDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Very Happy"
                    android:textSize="14sp" />
            </LinearLayout>


        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

        <TextView
            android:id="@+id/valRadioErrorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is an error text"
            android:layout_marginVertical="5dp"
            android:textSize="14sp"
            android:textColor="@color/colorRed"/>


    </LinearLayout>

</LinearLayout>
